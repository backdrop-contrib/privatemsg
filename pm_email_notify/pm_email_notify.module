    '#weight' => 0,
  );

  $form['pm_email_notify']['pm_email_notify_desc'] = array(
    '#type' => 'item',
    '#title' => t('Customize the email messages sent to users upon receipt of a new private message.'),
    '#weight' => 1,
  );

  $form['pm_email_notify']['pm_email_notify_from'] = array(
    '#type' => 'textfield',
    '#title' => t('From e-mail address for notifications'),
    '#default_value' => config_get('privatemsg.settings', 'pm_email_notify_from'),
    '#weight' => 2,
    '#description' => t('This is the e-mail address that notifications will come from. Leave blank to use the site default.'),
  );

  $form['pm_email_notify']['pm_email_notify_subject'] = array(
    '#type' => 'textfield',
    '#title' => t('Subject of notification messages'),
    '#default_value' => config_get('privatemsg.settings', 'pm_email_notify_subject'),
    '#weight' => 2,
  );

  $form['pm_email_notify']['pm_email_notify_body'] = array(
    '#type' => 'textarea',
    '#title' => t('Body of notification messages'),
    '#default_value' => config_get('privatemsg.settings', 'pm_email_notify_body'),
    '#weight' => 3,
  );

  if (module_exists('token')) {
    $form['pm_email_notify']['token'] = array(
      '#type' => 'fieldset',
      '#title' => t('Token browser'),
      '#weight' => -1,
      '#collapsible' => TRUE,
      '#collapsed' => TRUE,
      '#weight' => 4,
    );
    $form['pm_email_notify']['token']['browser'] = array(
      '#theme' => 'token_tree',
      '#token_types' => array('privatemsg_message'),
    );
  }
  else {
    $form['pm_email_notify']['token'] = array(
      '#type' => 'fieldset',
      '#title' => t('Token Suggestions'),
      '#weight' => -1,
      '#collapsible' => TRUE,
      '#collapsed' => TRUE,
      '#weight' => 4,
    );
    $form['pm_email_notify']['token']['suggestions'] = array(
      '#type' => 'item',
      '#markup' => t('Many tokens may be used, including: [privatemsg_message:url], [privatemsg_message:thread-id], [privatemsg_message:author:name], [privatemsg_message:author:uid], [privatemsg_message:recipient:name], [privatemsg_message:subject], [privatemsg_message:body]. Enable the <a href="https://drupal.org/project/token">Token module</a> to see all available.'),
    );
  }

  // Add a submit button
  $form['#submit'][] = 'pm_email_notify_form_privatemsg_admin_settings_alter_submit';
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save configuration'),
  );
  return $form;
}


/**
 * Submit handler for pm_email_notify settings form.
 */
function pm_email_notify_form_privatemsg_admin_settings_alter_submit($form, &$form_state) {
  $config = config('privatemsg.settings');
  $config->set('pm_email_notify_default', $form_state['values']['pm_email_notify_default']);
  $config->set('pm_email_notify_desc', $form_state['values']['pm_email_notify_desc']);
  $config->set('pm_email_notify_from', $form_state['values']['pm_email_notify_from']);
  $config->set('pm_email_notify_subject', $form_state['values']['pm_email_notify_subject']);
  $config->set('pm_email_notify_body', $form_state['values']['pm_email_notify_body']);
  $config->set('browser', $form_state['values']['browser']);
  $config->set('suggestions', $form_state['values']['suggestions']);
  $config->save();
}
