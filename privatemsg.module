function pm_preview($form, &$form_state) {
//    drupal_set_message('<pre>two </pre>');
//    drupal_set_message('<pre>'. print_r($form_state, 1) .' </pre>');

  $form_values = $form_state['values'];
  $op = isset($form_values['op']) ? $form_values['op'] : '';
